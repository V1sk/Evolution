<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ff.theme.white.colorPrimary</item>
        <item name="colorPrimaryDark">@color/ff.theme.white.colorPrimaryDark</item>
        <item name="colorAccent">@color/ff.theme.white.colorAccent</item>

        <item name="android:windowBackground">@color/ff.background</item>

        <item name="android:textColorPrimary">@color/ff.theme.white.textColorPrimary</item>
        <item name="android:textColorSecondary">@color/ff.theme.white.textColorSecondary</item>
    </style>

    <style name="FFStyle.MainTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/ff.main.tab.indicator.height</item>
        <item name="tabPaddingStart">@dimen/ff.padding.normal</item>
        <item name="tabPaddingEnd">@dimen/ff.padding.normal</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/FFTextAppearance.MainTab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="FFTextAppearance.MainTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ExpandedToolbar">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <dimen name="ff.main.tab.indicator.height">2dp</dimen>
    <dimen name="ff.padding.normal">8dp</dimen>
</resources>
